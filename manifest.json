{
  "manifest_version": 3,
  "name": "Tabs saver",
  "version": "1.0",
  "description": "Extract all tab currently active tabs in file",
  "icons": {
    "16": "icons/16.png",
    "32": "icons/32.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "permissions": [
    "tabs",
    "downloads",
    "storage"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Управление вкладками"
  },
  "background": {}
}